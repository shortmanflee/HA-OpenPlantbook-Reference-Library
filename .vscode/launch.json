{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Home Assistant (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/hass",
            "args": [
                "--config",
                "${workspaceFolder}/config",
                "--debug",
                "--verbose"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "justMyCode": false,
            "subProcess": true
        },
        {
            "name": "Home Assistant (Safe Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/hass",
            "args": [
                "--config",
                "${workspaceFolder}/config",
                "--debug",
                "--safe-mode"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "justMyCode": false
        },
        {
            "name": "Test Integration",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests/",
                "-v"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/custom_components"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "justMyCode": true
        }
    ]
}