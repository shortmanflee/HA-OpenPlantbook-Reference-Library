{
    "name": "shortmanflee/openplantbook_ref",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "postCreateCommand": "pip install -r requirements.txt && mkdir -p config && ln -sf ${PWD}/custom_components ${PWD}/config/custom_components",
    "forwardPorts": [
        8080
    ],
    "portsAttributes": {
        "8080": {
            "label": "Home Assistant",
            "onAutoForward": "notify"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ryanluker.vscode-coverage-gutters",
                "redhat.vscode-yaml",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.vscode-json",
                "GitHub.vscode-github-actions",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.remotehub",
                "GitHub.vscode-pull-request-github"
            ],
            "settings": {
                "files.eol": "\n",
                "editor.tabSize": 4,
                "editor.formatOnPaste": true,
                "editor.formatOnSave": true,
                "editor.formatOnType": false,
                "files.trimTrailingWhitespace": true,
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.autoImportCompletions": true,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "[yaml]": {
                    "editor.defaultFormatter": "redhat.vscode-yaml"
                },
                "[json]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                }
            }
        }
    },
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers-extra/features/apt-packages:1": {
            "packages": "ffmpeg,libturbojpeg0,libpcap-dev,sqlite3"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    }
}